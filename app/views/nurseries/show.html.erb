function initMap() {
 // 地図の作成
    let mapLatLng = new google.maps.LatLng({lat: markerData[0]['lat'], lng: markerData[0]['lng']});
    map = new google.maps.Map(document.getElementById('map2'), {
    center: mapLatLng,
    zoom: 14
   });

 // マーカー毎の処理
