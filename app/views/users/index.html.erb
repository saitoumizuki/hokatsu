<div class="body-content">
  <div class="container-fluid">
    <div class="user">
      <h2 class="h2">ユーザー 一覧</h2>
      <div class="row main-content">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="col-sm-1">ID</th>
              <th class="col-sm-1">おなまえ</th>
              <th class="col-sm-1">住所</th>
              <th class="col-sm-1"></th>
              <th class="col-sm-1"></th>
              <th class="col-sm-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.address %></td>
              <td><%= link_to "詳細", user_path(user), class: "btn btn-info btn-sm" %></td>
              <td><%= link_to "編集", edit_user_path(user), class: "btn btn-default btn-sm" %></td>
              <td><%= link_to "削除", user_path(user.id), method: :delete, data: { confirm:'ユーザーを退会させますか？'}, class: "btn btn-danger btn-sm" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="admin">
      <h2 class="h2">アドミン 一覧</h2>
      <div class="row main-content">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="col-sm-1">ID</th>
              <th class="col-sm-1">おなまえ</th>
              <th class="col-sm-1"></th>
              <th class="col-sm-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.name %></td>
              <td><%= link_to "編集", edit_admin_path(admin), class: "btn btn-default btn-sm" %></td>
              <td><%= link_to "削除", admin_path(admin.id), method: :delete, data: { confirm:'アドミンを削除しますか？'}, class: "btn btn-danger btn-sm" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>