<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid">
    <div class="row">
        <div class="list-head">
          <h2 class="h2">マイリスト</h2>
        </div>

        <div class="col-md-4 sidebar-wide">
          <h3 class="h3 memo">Memo</h3>

          <% if @memo1.present? %>

            <div class="memo-box">
              <%= form_for(@memo1) do |f| %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.text_area :body, class: "memo-form" %>
                <div>
                  <%= f.submit "　保存　", class: "btn btn-sm btn-info" %>
                </div>

              <% end %>
            </div>
          <% else %>
            <div class="memo-box">
              <%= form_for(@memo2) do |f| %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.text_area :body, size: "35x10", class: "memo-form" %>
                <div>
                  <%= f.submit "　保存　", class: "btn btn-sm btn-info" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>


        <div class="col-md-8 col-sm-12">
          <div class="list-a-box">
          <a class="list-a" href="">並べ替え</a>
        </div>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="col-lg-1">並び順</th>
                <th class="col-lg-1"></th>
                <th class="col-lg-3">保育園名</th>
                <th class="col-lg-1"></th>
                <th class="col-lg-3">所在地</th>
                <th class="col-lg-2">電話番号</th>
                <th class="col-lg-1"></th>
              </tr>
            </thead>
            <tbody>
              <% if @list_items.present? %>
              <% @list_items.each do |list_item| %>
              <%= form_for(list_item) do |f| %>
              <tr>
                <td><%= f.text_field :row_order, class: "roworder" %></td>
                <td><%= f.submit "保存", class: "btn btn-xs btn-info" %></td>
                <td><%= link_to list_item.nursery.name, nurseries_path(list_item.nursery.id) %></td>
                <td><%= list_item.nursery.category %></td>
                <td><%= list_item.nursery.address %></td>
                <td><%= list_item.nursery.phone %>-<%= list_item.nursery.phone_middle %>-<%= list_item.nursery.phone_right %></td>
                <td><%= link_to "解除", list_item_path(list_item.id), method: :delete,data: { confirm: 'マイリストから外してよろしいですか？ ※詳細ページに記入したメモも削除されます' }, class:"btn btn-default btn-xs" %></td>
              </tr>
              <% end %>
              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-sm-12 sidebar-narrow">
          <h3 class="h3 memo">Memo</h3>

          <% if @memo1.present? %>

            <div class="memo-box">
              <%= form_for(@memo1) do |f| %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.text_area :body, class: "memo-form" %>
                <div>
                  <%= f.submit "　保存　", class: "btn btn-sm btn-info" %>
                </div>

              <% end %>
            </div>
          <% else %>
            <div class="memo-box">
              <%= form_for(@memo2) do |f| %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.text_area :body, size: "35x10", class: "memo-form" %>
                <div>
                  <%= f.submit "　保存　", class: "btn btn-sm btn-info" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
